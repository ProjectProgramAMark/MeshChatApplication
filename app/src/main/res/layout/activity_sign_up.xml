<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.markmoussa.meshchatapplication.SignUpActivity">

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Choose username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameField" />

    <ImageView
        android:id="@+id/profilePicImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/profilePicUploadButton"
        app:layout_constraintTop_toBottomOf="@+id/usernameField"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/profilePicUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="18dp"
        android:text="Upload Profile Pic"
        app:layout_constraintBottom_toBottomOf="@+id/profilePicImageView"
        app:layout_constraintEnd_toEndOf="@+id/usernameField" />

</android.support.constraint.ConstraintLayout>
